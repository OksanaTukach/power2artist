extends ../layout/main

block variables
    - var title = 'Карточка компании';

block libs-css
    link(rel="stylesheet" type='text/css' href="./libs/jquery.mCustomScrollbar.css")
    link(rel="stylesheet" type='text/css' href="./libs/jquery-ui-1.9.2.custom.min.css")
block libs-js
    script(src="./libs/jquery.mCustomScrollbar.concat.min.js")
    script(src="./libs/jquery-ui-1.9.2.custom.min.js")

block content
    include ../modules/header
    include ../modules/sidebar
    main
        .page-head
            .container
                .page-head__wrp
                    include ../modules/breadcrumbs
                    h1= title
        .container
            .card 
                .card-main(data-aos="fade-right")  
                    .card-main__photo 
                        .img 
                            img(src="./img/content/card-photo2.png")
                        .desc 
                            .desc-zag Coca-cola
                            .item 
                                .zag Название бренда
                                .val Coca-cola
                            .item 
                                .zag Страна
                                .val Беларусь
                            .item 
                                .zag Телефон
                                .val +375 (29) 698-69-98
                            .item 
                                .zag Email
                                .val Coca-cola@mail.ru
                            .item 
                                .zag Сайт компании
                                .val Coca-cola.com
                    .card-main__content
                        .content-zag Стоимость услуг:
                        .card-list 
                            .card-list__item.js-card-list__item
                                .card-list__item-name.js-card-list__name 
                                    span Продюсирование
                                    +icon('arrow-drop')
                                .card-list__hide.js-content
                                    .card-list__item-content 
                                        .zag Стоимость услуги
                                        .val 9000 BYN
                                    .card-list__item-doc 
                                        .list-doc
                                            a(href="/" download).documents
                                                .img 
                                                    img(src="./img/content/documents.png")
                                                .name    
                                                    span.blue Тариф 1
                                                    span 16.08.2020, pdf, 15 кб
                                            a(href="/" download).documents
                                                .img 
                                                    img(src="./img/content/documents.png")
                                                .name    
                                                    span.blue Тариф 1
                                                    span 16.08.2020, pdf, 15 кб
                                        +btnBlue('Заказать услугу')

                            .card-list__item.js-card-list__item
                                .card-list__item-name.js-card-list__name 
                                    span Продакшн
                                    +icon('arrow-drop')
                                .card-list__hide.js-content
                                    .card-list__item-content 
                                        .zag Стоимость услуги
                                        .val 9000 BYN
                                    .card-list__item-doc 
                                        .list-doc
                                            a(href="/" download).documents
